//div垂直水平居中
juzhong
  position absolute
  left 0
  top 0
  bottom 0
  right 0
  margin auto

//生成1px边框
border-1px($color)
  position relative
  &:after
    position absolute
    bottom 0
    content ""
    display block
    width 100%
    height 1px
    background $color

footer-run($color)
  position relative
  color $color
  &:after
    position absolute
    bottom (4/r)
    content ""
    display block
    width 100%
    height (3/r)
    background $color


// 定义一个变量，用来适配
r = 375rem/16

//点击主路由,背景图片切换
bg-image($url)
  background-image url($url+"_sel.png")

//2x图和3x图的自适应
bg-image($url)
  background-image url($url+"@2x.png")
  @media(-webkit-min-device-pixel-ratio: 3) ,(min-device-pixel-ratio: 3)
    background-image url($url+"@3x.png")
